<h1 class="pb-4">Regions</h1>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page">Explore Regions</li>
    </ol>
</nav>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 mb-4">
    <% if(regions != '') { %>
        <% regions.forEach(function(region, index) { %>
            <a href="/region/<%- region.name %>" class="col text-center region__link">
                <div class="region__img shadow">
                    <img src="/icons/<%- region.image %>" width="220" height="200"  alt=<%- region.name %> loading="lazy">
                </div>
                <div class="pt-1"><%- region.name %> Region</div>
            </a>
        <% }) %>
    <% } %>
</div>